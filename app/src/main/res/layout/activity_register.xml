<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/side_nav_bar"
        android:src="@drawable/back"
        android:tint="@color/text_light"
        app:backgroundTint="@color/main" />
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_trainer" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:fontFamily="@font/andika"
           android:text="ITrain"
           android:textColor="@color/text_light"
           android:textSize="28sp"
           android:textStyle="bold" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/andika"
           android:text="Register"
           android:textColor="@color/text_light"
           android:textSize="25sp"
           android:textStyle="bold" />

       <EditText
           android:id="@+id/register_username"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="#FFFFFF"
           android:drawableLeft="@drawable/person"
           android:fontFamily="@font/andika"
           android:gravity="center_horizontal"
           android:hint="Username"
           android:inputType="text"
           android:padding="5dp"
           android:textAlignment="center"
           android:textColorHint="@color/text_dark" />

       <EditText
           android:id="@+id/register_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="#fff"
           android:drawableLeft="@drawable/ic_email"
           android:fontFamily="@font/andika"
           android:gravity="center_horizontal"
           android:hint="Email"
           android:inputType="textEmailAddress"
           android:padding="5dp"
           android:textAlignment="center"
           android:textColorHint="@color/text_dark" />

       <EditText
           android:id="@+id/register_password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@color/text_light"
           android:drawableLeft="@drawable/ic_password"
           android:fontFamily="@font/andika"
           android:gravity="center_horizontal"
           android:hint="Password"
           android:inputType="textPassword"
           android:padding="5dp"
           android:textAlignment="center"
           android:textColorHint="@color/text_dark" />

       <EditText
           android:id="@+id/register_confirm_password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@color/text_light"
           android:drawableLeft="@drawable/ic_confirm_pass"
           android:fontFamily="@font/andika"
           android:gravity="center_horizontal"
           android:hint="Confirm Password"
           android:inputType="textPassword"
           android:padding="5dp"
           android:textAlignment="center"
           android:textColorHint="@color/text_light" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:fontFamily="@font/andika"
           android:text="I am:"
           android:textColor="@color/text_light" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/staffFalse_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:fontFamily="@font/andika"
                android:text="looking for a personal trainer."
                android:textColor="@color/text_light"
                android:textColorHighlight="@color/main"
                android:textColorHint="@color/text_light"
                android:textColorLink="@color/main" />

            <RadioButton
                android:id="@+id/staffTrue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andika"
                android:text="a personal trainer."
                android:textColor="@color/text_light" />

        </RadioGroup>

       <Button
           android:id="@+id/btn_register"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:background="@drawable/side_nav_bar"
           android:fontFamily="@font/andika"
           android:text="Register"
           android:textColor="@color/text_light" />
    </LinearLayout>

</RelativeLayout>